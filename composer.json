{
    "name": "restvel/restvel",
    "description": "The Restvel CMS.",
    "keywords": ["cms", "application", "restvel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "restvel/base": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "extension/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php please key:generate"
        ],
        "post-install-cmd": [
            "Restvel\\Foundation\\ComposerScripts::postInstall",
            "php please optimize"
        ],
        "post-update-cmd": [
            "Restvel\\Foundation\\ComposerScripts::postUpdate",
            "php please optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
